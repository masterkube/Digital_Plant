                <Sequence>
                    <Tell><element><elementName>ChForAssembly</elementName></element></Tell>
                    <Compose>
                        <AgentCommand>
                            <AgentName>AssemblyTestChainAgent</AgentName>
                            <Ask><action><actionName>CreateAssemblyTestChain</actionName></action><internal>true</internal></Ask>
