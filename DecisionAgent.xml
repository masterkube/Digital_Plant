<?xml version="1.0" encoding="UTF-8"?>
<Agent>
	<AgentName>DecisionAgent</AgentName>
		<Choice>
			<ChoiceOption>
                <Ask><action><actionName>PassTheTest</actionName></action></Ask>
				<OptionAction>
    		        <AgentCommand><AgentName>DecisionAgent</AgentName></AgentCommand>
                </OptionAction>
			</ChoiceOption>
            <ChoiceOption>
                <Ask><action><actionName>FailTheTest</actionName></action></Ask>
				<OptionAction>
					<Sequence>
                        <Compose>
                            <AgentCommand>
                                <AgentName>FailTestsAgent</AgentName>
                                <Ask><action><actionName>CreateFailNode</actionName></action><internal>true</internal></Ask>
                            </AgentCommand>
                            <Tell><action><actionName>CreateFailNode</actionName></action><internal>true</internal></Tell>
                        </Compose>
                        <AgentCommand><AgentName>DecisionAgent</AgentName></AgentCommand>
                    </Sequence>
				</OptionAction>
			</ChoiceOption>
		</Choice>
</Agent>